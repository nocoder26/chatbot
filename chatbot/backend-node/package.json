{
  "name": "izana-backend-node",
  "version": "1.0.0",
  "description": "Izana AI Node.js/Express backend with Prisma",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "start": "prisma db push --skip-generate && node src/index.js",
    "dev": "node --watch src/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^7.0.0",
    "@prisma/client": "^6.0.0",
    "@simplewebauthn/server": "^13.2.2",
    "@xenova/transformers": "^2.17.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^8.2.1",
    "groq-sdk": "^0.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "openai": "^6.22.0",
    "pdf-parse": "^1.1.1",
    "prisma": "^6.0.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "supertest": "^7.2.2",
    "vitest": "^4.0.18"
  }
}
